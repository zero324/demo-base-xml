<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://dubbo.apache.org/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://dubbo.apache.org/schema/dubbo http://dubbo.apache.org/schema/dubbo/dubbo.xsd">
    <dubbo:application name="service-provider"/>
    <dubbo:protocol name="dubbo" port="20880"/>
    <dubbo:registry  address="zookeeper://192.168.230.130:2181?timeout=10000" />
    <bean id="helloServiceImpl" class="com.lagou.service.HelloServiceImpl"/>
    <!--暴露service服务-->
    <dubbo:service interface="com.lagou.service.HelloService" ref="helloServiceImpl"/>
</beans>